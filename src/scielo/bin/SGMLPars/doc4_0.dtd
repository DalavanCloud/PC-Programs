<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!--    Article                                                           -->   
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

<!ELEMENT doc  - - (
                    toctitle | doi | related |
                    doctitle |  
                    (((author+, onbehalf?) | corpauth)+, normaff*) |
                    ((abstract | xmlabstr), kwdgrp) |
                    confgrp | funding | hist | 
                    xmlbody |
                    ack | glossary | deflist | app |
                    refs |
                    fngrp | cc |
                    docresp | subdoc 
                    )+
                    +(%i.float;)>
<!ATTLIST doc
          acron CDATA #REQUIRED
          jtitle   CDATA #REQUIRED
          nlmtitle   CDATA #IMPLIED
          issn     CDATA #REQUIRED
          pissn CDATA #IMPLIED 
          eissn CDATA #IMPLIED
          pubname CDATA #REQUIRED
          license CDATA #REQUIRED
          volid    CDATA #IMPLIED
          supplvol CDATA #IMPLIED
          issueno  CDATA #IMPLIED
          supplno  CDATA #IMPLIED 
          isidpart CDATA #IMPLIED 
          dateiso  CDATA #REQUIRED
          fpage    CDATA #REQUIRED
          fpageseq    CDATA #REQUIRED
          lpage    CDATA #REQUIRED
          elocatid CDATA #IMPLIED 
          artdate CDATA #IMPLIED
          ahpdate CDATA #IMPLIED  
          ahppid CDATA #IMPLIED
          pagcount CDATA #REQUIRED
          refcount CDATA #REQUIRED
          tabcount CDATA #REQUIRED
          figcount CDATA #REQUIRED
          eqcount CDATA #REQUIRED
          doctopic CDATA #REQUIRED
          language CDATA #REQUIRED
          version  CDATA #REQUIRED	  
		  >

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!--    Subdoc                                                        -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

<!ELEMENT subdoc    - - (
                    toctitle | doi | related |
                    doctitle |  
                    (((author+, onbehalf?) | corpauth)+, normaff*) |
                    ((abstract | xmlabstr), kwdgrp) |
                    confgrp | funding | hist | 
                    xmlbody |
                    ack | glossary | deflist | app |
                    refs |
                    fngrp | cc |
                    docresp | subdoc 
                    )+
                    +(%i.float;)>
<!ATTLIST subdoc
          id CDATA #REQUIRED 
          subarttp CDATA #REQUIRED 
          language CDATA #REQUIRED >

<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
<!--    Subdoc                                                        -->
<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

<!ELEMENT docresp    - - (
                    toctitle | doi | related |
                    doctitle |  
                    (((author+, onbehalf?) | corpauth)+, normaff*) |
                    ((abstract | xmlabstr), kwdgrp) |
                    confgrp | funding | hist | 
                    xmlbody |
                    ack | glossary | deflist | app |
                    refs |
                    fngrp | cc |
                    docresp | subdoc 
                    )+
                    +(%i.float;)>
<!ATTLIST docresp
          id CDATA #REQUIRED 
          language CDATA #REQUIRED >

<!ELEMENT toctitle - - (#PCDATA) >

<!ELEMENT abstract - - (#PCDATA) >
<!ATTLIST abstract
          language CDATA #REQUIRED >

<!ELEMENT kwdgrp   - - (kwd)+  >
<!ATTLIST kwdgrp
          language CDATA #REQUIRED >
          
<!ELEMENT kwd  - - (#PCDATA) >

<!ELEMENT doctitle   - - (subtitle | (#PCDATA))  >
<!ATTLIST doctitle
          language CDATA #REQUIRED >

<!ELEMENT rdoctitl   - - (#PCDATA)  >

<!ELEMENT cc   - - (#PCDATA)  >
<!ATTLIST cc
          ccid CDATA #REQUIRED 
          cversion CDATA #REQUIRED 
          cccompl CDATA #IMPLIED 
          >

<!ELEMENT hist     - - (received, revised*, accepted?) >

<!ELEMENT received - - (#PCDATA) >
<!ATTLIST received
          dateiso  CDATA #REQUIRED >
<!ELEMENT revised  - - (#PCDATA) >
<!ATTLIST revised
          dateiso  CDATA #REQUIRED >
<!ELEMENT accepted - - (#PCDATA) >
<!ATTLIST accepted
          dateiso  CDATA #REQUIRED >

<!ELEMENT refs     - - (ref+) >
<!ELEMENT ref     - - ( text-ref| authors* 
                        | arttitle | chptitle | source
                        | date | pages
                        | volid | issueno | suppl | part | coltitle | colvolid 
                        | isbn | extent | edition | city | state | country | pubname
                        | confgrp | reportid | contract | letterto | found-at 
                        | thesgrp | patentno 
                        | url | cited | doi | pubid 
                        | moreinfo)+
            >
<!ATTLIST ref     
          reftype CDATA #REQUIRED >

<!ELEMENT authors     - - ((pauthor | cauthor)+, et-al?)* >
<!ATTLIST authors     
          role CDATA #REQUIRED >

<!ELEMENT cauthor - - (#PCDATA) > 
<!ELEMENT pauthor - - (fname & surname) > 

<!ELEMENT moreinfo - - (#PCDATA) > 
<!ATTLIST moreinfo 
          descript  CDATA #IMPLIED >

<!ELEMENT arttitle - - (#PCDATA) > 
<!ELEMENT chptitle - - (#PCDATA) > 
<!ELEMENT source - - (#PCDATA) > 
<!ELEMENT reportid - - (#PCDATA) > 
<!ELEMENT letterto - - (#PCDATA) > 
<!ELEMENT found-at - - (#PCDATA) > 
<!ELEMENT patentno - - (#PCDATA) > 
<!ATTLIST patentno
          country  CDATA #REQUIRED >


